@model cms.Models.TemplateSettings

<div ng-controller="@Model.Type" ng-click="edit(gridelement)" class="" ng-class="{contentitem: gridelement.Id != 0}">
	<div ng-show="gridelement.Id == 0">
		<div class="btn-group">
			<button ng-click="add(gridelement)" class="btn">{{gridelement.Type}}</button>
			<button class="btn dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li><a href="#" ng-click="addWithType(gridelement, 'text', $event )"> text </a></li>
				<li><a href="#" ng-click="addWithType(gridelement, 'textlocalized', $event )"> textlocalized </a> </li>
				<li><a href="#" ng-click="addWithType(gridelement, 'novinka', $event )"> novinka </a></li>
				<li><a href="#" ng-click="addWithType(gridelement, 'simplehtml', $event )"> simple HTML </a></li>
				<li><a href="#" ng-click="addWithType(gridelement, 'reference', $event )"> Reference </a></li>
			</ul>
		</div>
	</div>

	<div ng-show="gridelement.Id">
		<button ng-click="remove(gridelement)" class="btn btn-mini font-icon delete" />
		<b>@Model.Type</b>
	</div>
	<div ng-show="gridelement.Edit" >
		@Html.Partial(Model.TemplateEdit)
		<button class="btn btn-small" ng-click="save(gridelement)">Uložit</button>
		<p></p>
	</div>

	<div ng-show="!gridelement.Edit" >
		@Html.Partial(Model.TemplateView)
	</div>
</div>
<script type="text/html"></script>

