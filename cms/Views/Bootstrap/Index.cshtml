@model Newtonsoft.Json.Linq.JObject
@helper xxx(string item)
	{
	<tr>
		<td>
			@@@item
		</td>
		<td title="{{data.@(item).value}}" ng-dblclick="aaa($event)">
			<input ng-model="data.@(item).value " bootstrapelem="data.@item"  />
			@*<input ng-show="data.@(item).type == 'color' " class="colorPicker"  ng-model="data.@(item).value" bootstrapelem="data.@item" />*@
			&nbsp;&nbsp;&nbsp;
		</td>
	</tr>
}
@helper VariablesGroup(string name, string id, string[] values)
	{

	<text>
	<div class="accordion-group">
		<div class="accordion-heading">
			<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#@id" >@name
			</a>
		</div>
		<div id="@id" class="accordion-body collapse" >
			<div class="accordion-inner clearfix">
				@{
					const int count = 5;
					int len = values.Length / count;
					if (values.Length % count > 0) { len++; }
				}
				@for (int i = 0; i < len; i++)
	{
					<table style="float: left">
						@values.List(i, count, @<text>@xxx(item)</text>)
					</table>
	}
			</div>
		</div>
	</div>
	</text>;
	 	
}
<style>
	.accordion-group
	{
		background-color: white;
		position: relative;
		z-index: 999;
	}
	.color
	{
		width: 20px;
		border: 1px solid red;
	}
	.xxx
	{
		position: fixed;
		width: 100px;
	}
	.aaa
	{
		cursor: pointer;
		background-color: white;
	}
	.colorPicker
	{
		width: 1em;
		cursor: pointer;
	}
</style>
