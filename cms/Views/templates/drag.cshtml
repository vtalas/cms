<script type="text/javascript">

	$(document).ready(function (event) {
		var dragoverClass;
		dragoverClass = "dragover";

		$(".column").on("dragstart", function (e) {
			var event = e.originalEvent;
			this.style.opacity = '0.4';

			event.dataTransfer.effectAllowed = 'move';
			event.dataTransfer.setData('text/html', this.innerHTML);
			console.log("dragstart", $(this), e);
		});

		$(".column").on("drag", function (e) {
			//console.log("drag");
		});

		$(".column").on("dragenter", function (e) {
			console.log("dragenter", $(this));
		});

		$(".column").on("dragleave", function (e) {
			console.log("dragleave");
		});

		$(".column").on("drop", function (e) {
			console.log("drop column");
		});

		$(".column").on("dragend", function (e) {
			console.log("dragend......");
		});

		$(".column").on("dragover", function (e) {
			console.log("dragover");
		});


		$(".drop").on("dragover", function (e) {
			e.stopPropagation();
			e.preventDefault();
			console.log("dragover....");
		});
		$(".drop").on("drop", function (e) {
			console.log("drop....", $(this));
			e.preventDefault();
		});
		$(".drop").on("dragend", function (e) {
			console.log("dragendddd", $(this));
		});
		$(window).on("dragend", function (e) {
			console.log("window dragendddd", $(this));
		});


		$(".dropplaceholder").on("dragenter", function (e) {
			$(this).addClass(dragoverClass);
		});

		$(".dropplaceholder").on("dragover", function (e) {
			if (!$(this).hasClass(dragoverClass)) {
				$(this).addClass(dragoverClass);
			}
		});

		$(".dropplaceholder").on("dragleave", function (e) {
			$(this).removeClass(dragoverClass);
		});



	});
</script>

