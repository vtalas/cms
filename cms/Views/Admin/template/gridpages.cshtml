<div id="admin-gridpages">
	<div class="row row-gridpages header">
		<div class="span5">
			<span class="font-icon">&nbsp;</span>
			<a href="#" class="btn btn-link align-left">Jméno</a>
		</div>
		<div class="span4 btn-block">
			<a href="#" class="btn btn-link align-left" style="padding-left: 0px">Link</a>
		</div>
		<div class="span3 hider">
		</div>
	</div>
	<div class="row row-gridpages color" ng-repeat="grid in data" ngc-hover="">
		<div class="span5">
			<span style="width: 2em" class="font-icon  {{grid.Category}}"></span>
			<a ng-hide="grid.Edit" href="#/{{getLink(grid)}}" class="btn btn-link align-left">{{grid.Name}}</a>
			<span ng-show="grid.Edit" class="gridpage-input">
				<input ng-model="grid.Name" required />
			</span>
		</div>
		<div class="span4">
			<div ng-hide="grid.Edit" class="gridpage-text">{{grid.Link}}</div>
			<div ng-show="grid.Edit" class="gridpage-input">
				<input ng-model="grid.Link" required />
			</div>

		</div>
		<div class="span3" ng-class="editModeClass(grid)">
			<button ng-hide="grid.Edit" ng-click="edit(grid)" class="btn font-icon edit" />
			<button ng-show="grid.Edit" ng-click="save(grid)" class="btn font-icon ok" />
			<button ng-click="remove(grid)" class="btn font-icon delete" />
		</div>
	</div>

	<div class="row row-gridpages newitem" style="padding-top: 5px; padding-bottom: 5px;">
		<form>
			<div class="span5">
				<div style="margin-left: 4em; margin-top: 10px;" ngc-click-edit="newitem.Name"
					template-preview="#preview"
					template-edit="#edit"
					placeholder="jméno">
				</div>
			</div>
			<div class="span4">
				<div ngc-click-edit="newitem.Link"
					template-preview="#preview"
					template-edit="#edit"
					style="margin-top: 10px;"
					placeholder="link">
				</div>
			</div>
			<div class="span2">
				<button class="btn btn-success " type="submit" ng-click="newItemAdd()">přidat</button>
			</div>
		</form>
	</div>
</div>

<script id="preview" type="text/ng-template">
	<span ng-click="showEdit()" class="ngc-click-edit-preview" ng-hide="$parent.newItemEdit" ng-bind="ngcClickEdit"></span>
</script>

<script id="edit" type="text/ng-template">
	<input  ui-keydown="{ esc : 'showPreview()' }"
			class='ngc-click-edit-input'
		   ng-show="$parent.newItemEdit"
		   ng-model="ngcClickEdit"
		   required/>
</script>
