<div class="gridpage">
	<h2 ngc-click-edit="grid.Name"
		namespace="gridname"
		type="input"
		placeholder="text"></h2>

	<div ng-show="grid.GridElements.length == 0">
		<h3 class="text-error">bez obsahu.</h3>
	</div>
	<div class="row">
		<div ng-repeat="gridelement in grid.GridElements"
			 class="span{{gridelement.Width}}"
			 ng-class="{contentitem: gridelement.Id}"
				>
			<div ng-show="gridelement.Id ">
				<div class="gridelement-controls">
					<i class="clickable icon-question-sign" ng-click="showHelp(gridelement)">&nbsp;</i>
					<i title="{{gridelement.Type}}">{{gridelement.Type}}&nbsp;</i>
					<button ng-click="remove(gridelement)" class="btn btn-mini font-icon delete"/>
				</div>
				<div class="clearfix"></div>
				<div gridelement="gridelement" grid="grid"></div>
			</div>
		</div>
	</div>
	<div class="section-info-panel">

		<div class="btn-group" tooltip="vložit šablonu podle typu" tooltip-placement="right" tooltip-popup-delay="500">
			<button ng-click="addToEnd(newItem)" class="btn">{{newItem.Name}}</button>
			<button class="btn dropdown-toggle" data-toggle="dropdown">
				<span class="caret"></span>
			</button>
			<ul class="dropdown-menu">
				<li ng-repeat="templateItem in availableTemplates">
					<a href="#" ng-click="addWithType(newItem, templateItem, $event )">{{templateItem.name}}</a>
				</li>
			</ul>
		</div>


		<div>
			<h3>{{grid.groups.groupName}}</h3>
		</div>

		<div class="content-groups" ngc-editable-list="grid.groups.items"></div>
	</div>
</div>
