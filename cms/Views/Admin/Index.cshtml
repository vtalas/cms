@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewBag.Title = "Index";

	Bundles.Reference("~/Scripts/Admin/Index.js");
}

<div ng-app>
	<div ng-controller="index" data-model="@ViewBag.Json" >
		<ul>
			<li ng-repeat="item in data">
				<a href="/admin/{{item.Name}}/grids">{{item.Name}}</a> |
				<a href="/client/{{item.Name}}">Preview</a>
			</li>
		</ul>
	
		<form ng-submit="add()">
			<input type="text" ng-model="newitem"  size="30"
				placeholder="pridat dalsi">
			<input  type="submit" value="pridat">
		</form>
		<span>{{data.length}} total </span>
	</div>
</div>

