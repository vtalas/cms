@{
    ViewBag.Title = "Index";
	Bundles.Reference("~/Scripts/Admin/Index.js");
}

<div ng-controller="index">
	<ul>
		<li ng-repeat="item in data">
			<a href="/admin/{{item.Name}}/Show">{{item.Name}}</a>
		</li>
	</ul>
	
	<form ng-submit="add()">
		<input type="text" ng-model="newitem"  size="30"
			placeholder="pridat dalsi">
		<input  type="submit" value="pridat">
	</form>
	<span>{{data.length}} total </span>
</div>

